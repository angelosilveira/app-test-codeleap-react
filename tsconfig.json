{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@components/*": [
        "src/components/*",
      ],
      "@pages/*": [
        "src/pages/*",
      ],
      "@styles/*": [
        "src/styles/*",
      ],
      "@services/*": [
        "src/services/*",
      ],
      "@models/*": [
        "src/models/*",
      ],
      "@redux/*": [
        "src/redux/*",
      ],
      "@hooks/*": [
        "src/hooks/*",
      ],
      "@utils/*": [
        "src/utils/*",
      ],
      "@context/*": [
        "src/context/*",
      ],
    }
  },
  "include": ["src", "./setupTest.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
